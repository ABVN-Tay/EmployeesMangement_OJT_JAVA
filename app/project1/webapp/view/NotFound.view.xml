<mvc:View
  controllerName="project1.controller.NotFound"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  displayBlock="true"
  xmlns="sap.m">
  <Page id="_IDGenPage"
    showHeader="false"
    class="sapUiContentPadding">

    <VBox id="_IDGenVBox1"
      alignItems="Center"
      justifyContent="Center"
      fitContainer="true"
      class="sapUiSmallMarginTop sapUiSmallMarginBottom">

      <core:Icon id="_IDGenIcon"
        src="sap-icon://error"
        size="4rem"
        color="Negative" />

      <Title id="_IDGenTitle"
        text="404 - Page Not Found"
        level="H1"
        class="sapUiSmallMarginTop" />

      <Text id="_IDGenText"
        text="The page you are looking for does not exist or has been moved."
        textAlign="Center"
        class="sapUiSmallMarginTop sapUiSmallMarginBottom" />

      <Button id="_IDGenButton"
        text="Go to Home"
        type="Emphasized"
        press="onNavHome" />
        
    </VBox>

  </Page>
</mvc:View>
